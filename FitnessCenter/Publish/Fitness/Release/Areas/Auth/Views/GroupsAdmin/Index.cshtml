@model IEnumerable<IdentityModel.Model.ApplicationGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Partial("_pageBreadcrumbs")
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, area = "Auth" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id, area = "Auth" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, area = "Auth" })
                </td>
            </tr>
        }

    }

</table>

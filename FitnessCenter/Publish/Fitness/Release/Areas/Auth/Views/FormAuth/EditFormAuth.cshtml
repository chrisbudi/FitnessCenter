@model ViewModel.Identity.FormAuth

@{
    ViewBag.Title = "Edit Form Role";
    var count = 0;
}


<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>Create <small>Form Auth</small></h1>
    </div>
</div>

@Html.Partial("_pageBreadcrumbs")
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            @*<a href="index.html">Home</a>*@
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Form Stuff</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Form Controls</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-plus"></i> Tambah Group Form
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("CreateFormAuth", "FormAuth", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.TextBox("selectedForm")
                    <div class="form-body">
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.Label("Role List :", new { @class = "control-label" })
                            </div>
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.GroupId, new SelectList(Model.ApplicationGroups, "id", "text"), new { @class = "form-control disabled", @disabled = true })
                                @Html.HiddenFor(m => m.GroupId)
                            </div>
                        </div>
                        <div class="form-group">
                            Search
                        </div>

                        <table class="table table-striped table-bordered table-hover" id="tableModule">
                            <thead>
                                <tr>
                                    <th width="3%">
                                        No
                                    </th>
                                    <th>
                                        FormName
                                    </th>
                                    <th width="3%">
                                        R
                                    </th>
                                    <th width="3%">
                                        C
                                    </th>
                                    <th width="3%">
                                        U
                                    </th>
                                    <th width="3%">
                                        D
                                    </th>
                                    <th>
                                        <i class="fa fa-cogs fa-lg"></i>
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-9">
                                <button type="submit" class="btn btn-circle green bold"><i class="fa fa-check"></i> Simpan</button>
                                <a href="@Url.Action("Index")" class="btn btn-circle red bold"><i class="fa fa-times"></i> Batal</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- END PAGE CONTENT-->
@section Scripts {
    <input type="checkbox" name="" value="" class="" id="" />
    <script type="text/javascript" src="../../assets/global/plugins/jquery-multi-select/js/jquery.multi-select.js"></script>

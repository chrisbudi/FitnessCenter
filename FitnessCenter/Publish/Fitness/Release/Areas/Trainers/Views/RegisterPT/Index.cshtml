@{
    ViewBag.Title = "Personal Trainer";
}

<!-- BEGIN PAGE HEADER-->
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>Pendaftaran <small>PT (Personal Trainer)</small></h1>
    </div>
</div>


@Html.Partial("_pageBreadcrumbs")

<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-basket font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">Member Listing</span>
            <span class="caption-helper">register member...</span>
        </div>
        <div class="actions">

        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="active">
            <a aria-expanded="true" href="#portletMember" data-toggle="tab">
                Member List
            </a>
        </li>
        <li>
            <a aria-expanded="false" href="#portletPersonalTrainer" data-toggle="tab">
                Personal Trainer List
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="portletMember">
            <div class="portlet-body">
                <div class="row margin-bottom-20">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="tableMember">
                            <thead>
                                <tr role="row" class="heading">
                                    <th width="1%">No</th>
                                    <th width="10%">ID Member</th>
                                    <th width="20%">Nama</th>
                                    <th width="30%">Alamat</th>
                                    <th width="20%">Check In</th>
                                    <th width="1%">Actions</th>
                                </tr>
                                <tr role="row" class="filter">
                                    <td></td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="columns[1]FilterSearch">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="columns[2]FilterSearch">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="columns[3]FilterSearch">
                                    </td>
                                    <td></td>
                                    <td>
                                        <div class="margin-bottom-5">
                                            <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i>Search</button>
                                        </div>
                                        <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i>Reset</button>
                                    </td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="portletPersonalTrainer">
            <div class="portlet-body">
                <div class="row margin-bottom-20">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover" id="tablePersonalTrainer">
                            <thead>
                                <tr role="row" class="heading">
                                    <th width="1%">No</th>
                                    <th width="10%">ID Member</th>
                                    <th width="20%">Nama</th>
                                    <th width="30%">Alamat</th>
                                    <th width="10%">Start</th>
                                    <th width="10%">Expired</th>
                                    <th width="5%">Print PT</th>
                                    <th width="5%">Print OR</th>
                                    <th width="1%">Actions</th>
                                </tr>
                                <tr role="row" class="filter">
                                    <td></td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="columns[1]FilterSearch">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="columns[2]FilterSearch">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="columns[3]FilterSearch">
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <div class="margin-bottom-5">
                                            <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i>Search</button>
                                        </div>
                                        <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i>Reset</button>
                                    </td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
@section Scripts {

    @Scripts.Render("~/bundle/script/datatable")

    @*1---------Reporting---------*@
    @Html.Partial("Report/ReportView")

    <script>

        var loadDDL = null;

        $(function () {
            //Metronic.init(); // init metronic core components
            //Layout.init(); // init current layout


            var gridMember = new Datatable();
            var gridPersonalTrainer = new Datatable();

            gridMember.init({
                src: $("#tableMember"),
                onSuccess: function(grid) {
//                    alert(grid);
                    gridEvent.setEvent(grid);
                },
                onError: function(grid) {
                    //alert('fail');
                },
                loadingMessage: 'Loading...',
                dataTable: {
// here you can define a typical datatable settings from https://datatables.net/usage/options

                    // Uncomment below line("dom" parameter) to fix the dropdown overflow issue in the datatable cells. The default datatable layout
                    // setup uses scrollable div(table-scrollable) with overflow:auto to enable vertical scroll(see: assets/global/scripts/datatable.js).
                    // So when dropdowns used the scrollable div should be removed.
                    //"dom": "<'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'<'table-group-actions pull-right'>>r>t<'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'>>",
                    "lengthMenu": [
                        [10, 20, 50, 100, 150],
                        [10, 20, 50, 100, 150] // change per page values here
                    ],
                    "pageLength": 10, // default record count per page
                    "autoWidth": false,
                    "ajax": {
                        "url": "@Url.Action("RegisterPTMemberResult", "RegisterPT")", // ajax source
                    },
                    "columns": [
                        { "name": "No" },
                        { "name": "tMember.MemberNO" },
                        { "name": "tMember.tPerson.PNama" },
                        { "name": "tMember.tPerson.PAlamat" },
                        { "name": "Membership Left" },
                        {
                            "data": 5,
                            "render": function(data) {
                                var d = data;
                                return "<a href='@Url.Action("CreatePersonalTrainer", "RegisterPT")/" +
                                    d +
                                    "'><i class='fa fa-plus'></i> Register</a>";
                            },
                            "orderable": false,
                            "width": "5%"
                        }
                    ],
                    "order": [
                        [1, "asc"]
                    ] // set first column as a default sort by asc
                }
            });

            gridPersonalTrainer.init({
                src: $("#tablePersonalTrainer"),
                onSuccess: function (grid) {
                    gridEvent.setEvent(grid);
                },
                onError: function (grid) {
                    //alert('fail');
                },
                loadingMessage: 'Loading...',
                dataTable: {
                    // here you can define a typical datatable settings from https://datatables.net/usage/options

                    // Uncomment below line("dom" parameter) to fix the dropdown overflow issue in the datatable cells. The default datatable layout
                    // setup uses scrollable div(table-scrollable) with overflow:auto to enable vertical scroll(see: assets/global/scripts/datatable.js).
                    // So when dropdowns used the scrollable div should be removed.
                    //"dom": "<'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'<'table-group-actions pull-right'>>r>t<'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'>>",
                    "lengthMenu": [
                        [10, 20, 50, 100, 150],
                        [10, 20, 50, 100, 150] // change per page values here
                    ],
                    "pageLength": 10, // default record count per page
                    "autoWidth": false,
                    "ajax": {
                        "url": "@Url.Action("RegisterPTResult", "RegisterPT")", // ajax source
                    },
                    "drawCallback": function (settings) {
                        pageReporting.init('@Url.Action("ReportPage", "Reporting", new { area = "" })', $('.printPT'), '');
                        pageReporting.init('@Url.Action("ReportPage", "Reporting", new { area = "" })', $('.printOR'), '');
                    },
                    "columns": [
                        { "name": "No" },
                        { "name": "trMembership.tMember.MemberNO" },
                        { "name": "trMembership.tMember.tPerson.PNama" },
                        { "name": "trMembership.tMember.tPerson.PAlamat" },
                        { "name": "trMembership.MSTglMulai" },
                        { "name": "trMembership.MSTglMulai" },
                        {
                            "render": function (data) {
                                var d = data;
                                return "<a class='printPT' href='@Url.Action("PrintRegisterPersonalTrainer", "RegisterPT")/" + d + "'><i class='fa fa-print'></i> Print PT</a>";
                            },
                            "orderable": false,
                            "width": "10%"
                        },
                        {
                            "render": function (data) {
                                var d = data;
                                return "<a class='printOR' href='@Url.Action("PrintOrPersonalTrainer", "RegisterPT")/" + d + "'><i class='fa fa-print'></i> Print OR</a>";
                            },
                            "orderable": false,
                            "width": "10%"
                        },
                        {
                            data: 1,
                            "render": function (data) {
                                var d = data;
                                return "<a href='@Url.Action("Details", "RegisterPT")/" + d + "'><i class='fa fa-plus'></i> Register</a>";
                            },
                            "orderable": false,
                            "width": "5%"
                        }
                    ],
                    "order": [
                        [1, "asc"]
                    ] // set first column as a default sort by asc
                }
            });;


        });
    </script>
}


@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginRouteForm("Default", new { action = "LogOff", Controller = "Account" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    <li class="dropdown dropdown-user dropdown-dark">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
            <span class="username username-hide-on-mobile">
                @if (User != null)
                {
                    @User.Person.PNama
                }
                </span>
                @*<img alt="" class="img-circle hide1" src="~/assets/admin/layout4/img/avatar2.jpg" />*@

                <i class="fa fa-angle-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-default">
                <li>
                    <a href="@Url.Action("Index", "Manage", new {area = "Auth"})">
                        <i class="icon-user"></i> My Profile
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="icon-calendar"></i> My Calendar
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="icon-envelope-open"></i> My Inbox <span class="badge badge-danger">
                            3
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="icon-rocket"></i> My Tasks <span class="badge badge-success">
                            7
                        </span>
                    </a>
                </li>
                <li class="divider">
                </li>
                <li>
                    <a href="#">
                        <i class="icon-lock"></i> Lock Screen
                    </a>
                </li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="icon-key"></i> Log Out
                    </a>
                </li>
            </ul>
        </li>
}

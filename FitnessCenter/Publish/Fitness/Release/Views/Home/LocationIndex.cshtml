@model ViewModel.Registrasi.CalonMember.CalonMemberViewModel
@{
    ViewBag.Title = "Calon";
    Layout = null;
}
<h3 class="page-title">
    Please choose Your Location
</h3>
<div class="row">
    @using (Html.BeginForm("LocationIndex", "Home", FormMethod.Post, new { id = "submit_form", @class = "form-horizontal" }))
    {

        <div class="form-horizontal">
            <h4>Role.</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.DropDownList("Location", new SelectList(User.LocationsId, "LocationsId", "LocationsId"), new { @class = "form-control input-medium" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>


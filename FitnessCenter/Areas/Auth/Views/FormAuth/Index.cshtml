@{
    ViewBag.Title = "Index";
}
<!-- BEGIN PAGE HEADER-->

<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Auth <small>Form Auth</small>
        </h1>
    </div>
</div>

@Html.Partial("_pageBreadcrumbs")

<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="portlet light">
    <div class="portlet-body">
        <div class="row margin-bottom-20">
            <div class="col-md-12">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.RouteUrl("Auth_default", new {controller = "FormAuth", action = "CreateFormAuth"})" class="btn green">
                                    <i class="fa fa-plus"></i> Add New Module
                                </a>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="tableAuth">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Nama
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                <i class="fa fa-cogs fa-lg"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
@section Scripts {
    <script>

        $(function () {
            //Metronic.init(); // init metronic core components
            //Layout.init(); // init current layout


            // datatables Lab
            var tableModule = $('#tableAuth').DataTable({
                "serverSide": true,
                "processing": true,
                "ajax":
                {
                    url: "@Url.RouteUrl("Auth_default", new { controller = "FormAuth", action = "FormResult" })",
                    data:
                        function (d) {
                            d.idString = $('#tipeModule').val();
                        }
                },
                "lengthMenu": [5, 10, 25, 50, 75, 100],
                "pageLength": 5,
                "columnDefs": [
                    {
                        "targets": [0],
                        "data": null,
                        "className": "green",
                        "defaultContent": '<input type="checkbox" class="checkboxes" value="1"/>',
                        "orderable": false
                    },
                    {
                        "orderable": false
                    },
                    {
                        "orderable": true
                    },
                    {
                        "targets": -1,
                        "data": 3,
                        "render": function (data) {
                            var d = data;
                            return "<a href='@Url.Action("EditFormAuth", "FormAuth", new {area = "Auth"})/" + d + "'><i class='fa fa-edit fa-2x font-blue-soft'></i></a>";
                        },
                        "orderable": false,
                        className: "td.center",
                        "width": "3%"
                    }
                ],
                "order": [[1, "asc"]],
            });

            // event refresh for reset datatables
            $(window).load(function () {
                var moduleId = $('#moduleId');
                moduleId.val('');
            });

            // Checkbox for Relation Form ( 2 Field Relation )
        });

    </script>
}

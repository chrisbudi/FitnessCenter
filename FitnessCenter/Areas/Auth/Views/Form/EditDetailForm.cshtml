@model DataObjects.Entities.AspForm

@{
    ViewBag.Title = "Edit Detail Form";
}


<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>Edit <small>Detail Form</small></h1>
    </div>
</div>

@Html.Partial("_pageBreadcrumbs")
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="portlet light">
    <div class="portlet-body">
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN FORM PORTLET-->
                <div class="portlet box green ">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-plus"></i> Edit Detail Form
                        </div>
                        <div class="tools">
                            <a href="" class="collapse">
                            </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        @using (Html.BeginForm("EditDetailForm", "Form", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(m => m.parent_ID)
                            @Html.HiddenFor(m => m.FormId)
                            @Html.Hidden("FormName", Model.controller)


                            <div class="form-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Module, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.Module, new { @class = "form-control disabled", @readonly = true })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.AspForm2.title, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.AspForm2.title, new { @class = "form-control disabled", @readonly = true })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.area, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.area, new { @class = "form-control disabled", @readonly = true })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.title, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.title)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.desciption, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextAreaFor(m => m.desciption, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.desciption)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.controller, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextAreaFor(m => m.controller, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.controller)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.action, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-2">
                                        @Html.TextAreaFor(m => m.action, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.action)
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-9">
                                        <button type="submit" class="btn btn-circle green bold"><i class="fa fa-check"></i> Simpan</button>
                                        <a href="@Url.Action("index", "Barang")" class="btn btn-circle red bold"><i class="fa fa-times"></i> Batal</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

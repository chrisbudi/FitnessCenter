@model DataObjects.Entities.trCinCout
@{
    ViewBag.Title = "Check In Back Office";
}

<!-- BEGIN PAGE HEADER-->
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>Check In <small>Back Office</small></h1>
    </div>
</div>


@Html.Partial("_pageBreadcrumbs")

<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet-body form">
            @using (Html.BeginForm("CheckIn", "CheckInOutBO", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.PersonBOID)
                @Html.HiddenFor(m => m.LocBoID)
                @Html.HiddenFor(m => m.CinCoutID)
                @Html.HiddenFor(m => m.TimeStatus)
                @Html.HiddenFor(m => m.TypeStatusInOut)
                <form class="form-horizontal" role="form">
                    <div class="form-body help-block">
                        <div class="form-group">
                            @Html.LabelFor(m => m.PersonBOID, new { @class = "col-md-2 control-label" })
                            <div class="col-md-5">
                                <p class="form-control-static bold">
                                    : @Html.DisplayFor(m => m.PersonBOID)
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TimeStatus, new { @class = "col-md-2 control-label" })
                            <div class="col-md-5">
                                <p class="form-control-static bold">
                                    : @Html.DisplayFor(m => m.TimeStatus)
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LocBoID, new { @class = "col-md-2 control-label" })
                            <div class="col-md-5">
                                <p class="form-control-static bold">
                                    : @Html.DisplayFor(m => m.LocBoID)
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TypeStatusInOut, new { @class = "col-md-2 control-label" })
                            <div class="col-md-5">
                                <p class="form-control-static bold">
                                    : @Html.DisplayFor(m => m.TypeStatusInOut)
                                    @Html.DisplayFor(m => m.tTypeStatusCinCout.NameStatusInOut)
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-9">
                                <button type="submit" formaction="CheckIn" formmethod="post" class="btn btn-circle green bold"><i class="fa fa-check"></i> Check In</button>
                                <a href="@Url.Action("Index", "CheckInOutBO")" class="btn btn-circle red bold"><i class="fa fa-times"></i> Batal</a>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
    <!-- END  FORM PORTLET-->
</div>

<!-- END PAGE CONTENT-->
@section Scripts {
    <script>

        $(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
        });

    </script>
}

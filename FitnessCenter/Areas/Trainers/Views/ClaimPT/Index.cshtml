@using Services.Helpers
@{
    ViewBag.Title = "Claim";
}

<!-- BEGIN PAGE HEADER-->
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>Claim <small>PT (Personal Trainer)</small></h1>
    </div>
</div>


@Html.Partial("_pageBreadcrumbs")

<div class="portlet light">
    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
    {
        <div class="note note-danger">
            @ViewBag.Message
        </div>
    }
    <div class="portlet-body">
        @using (Html.BeginForm("Index", "ClaimPT", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="row">
                <div class="col-md-12">
                    <form action="#" class="alert alert-danger alert-borderless">
                        <div class="input-group">
                            <div class="input-cont">
                                <input type="text" name="search" placeholder="Search..." class="form-control" />
                            </div>
                            <span class="input-group-btn">
                                <button type="submit" class="btn green-haze">
                                    Search &nbsp; <i class="m-icon-swapright m-icon-white"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <button id="testbutton">test button</button>
            <br />
            <ul class="nav nav-tabs">
                <li class="active">
                    <a aria-expanded="true" href="#portletMember" data-toggle="tab">
                        Plan List
                    </a>
                </li>
                <li>
                    <a aria-expanded="false" href="#portletPersonalTrainer" data-toggle="tab">
                        Personal Trainer List
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="portletMember">
                    <div class="portlet-body">
                        <div class="row margin-bottom-20">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered table-hover" id="datatable_planpt">
                                    <thead>
                                        <tr role="row" class="heading">
                                            <th width="1%">No</th>
                                            <th width="15%">Personal&nbsp;Trainer</th>
                                            <th width="20%">Member&nbsp;Name</th>
                                            <th width="15%">Day</th>
                                            <th width="15%">Waktu&nbsp;Mulai</th>
                                            <th width="15%">Waktu&nbsp;Selesai</th>
                                            <th width="15%">Note</th>
                                            <th width="1%">Actions</th>
                                        </tr>
                                        <tr role="row" class="filter">
                                            <td></td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="columns[1]FilterSearch">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="columns[2]FilterSearch">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="columns[3]FilterSearch">
                                            </td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>
                                                <div class="margin-bottom-5">
                                                    <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i>Search</button>
                                                </div>
                                                <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i>Reset</button>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="portletPersonalTrainer">
                    <div class="portlet-body">
                        <div class="row margin-bottom-20">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered table-hover" id="datatable_personaltrainer">
                                    <thead>
                                        <tr role="row" class="heading">
                                            <th width="1%">No</th>
                                            <th width="10%">Member&nbsp;No</th>
                                            <th width="10%">Member&nbsp;Name</th>
                                            <th width="10%">Kuota</th>
                                            <th width="10%">Personal&nbsp;Trainer</th>
                                            <th width="10%">Start</th>
                                            <th width="10%">selesai</th>
                                            <th width="10%">Status</th>
                                            <th width="5%">Action</th>
                                        </tr>
                                        <tr role="row" class="filter">
                                            <td></td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="columns[1]FilterSearch">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="columns[2]FilterSearch">
                                            </td>
                                            <td></td>
                                            <td>
                                                <input type="text" class="form-control form-filter input-sm" name="columns[3]FilterSearch">
                                            </td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td>
                                                <div class="margin-bottom-5">
                                                    <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i>Search</button>
                                                </div>
                                                <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i>Reset</button>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div id="info" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">
                <i class="fa fa-info-circle fa-lg font-blue">
                    <b>Info</b>
                </i>
            </h4>
        </div>
        <div class="modal-body bold">
            @ViewBag.Message
        </div>
        <div class="modal-footer">
            <button type="button" class="btn default" data-dismiss="modal">Close</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- END PAGE CONTENT-->

    <div class="portlet-body">
        <div class="row margin-bottom-20">
            <div class="col-md-12">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.Action("CreateMemberType", "MemberType")" class="btn green">
